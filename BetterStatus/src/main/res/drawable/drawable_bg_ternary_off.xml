<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dip" android:color="@color/black_alpha_20" />
            <corners android:topLeftRadius="4.0dip" android:bottomLeftRadius="4.0dip" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dip" android:color="@color/status_red_500" />
            <corners android:topLeftRadius="4.0dip" android:bottomLeftRadius="4.0dip" />
            <solid android:color="@color/status_red_500" />
        </shape>
    </item>
</selector>